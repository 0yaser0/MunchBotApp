<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/healthFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/actionbar_top">

            <TextView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30px"
                android:layout_marginTop="70px"
                android:text="@string/back"
                android:textAppearance="@style/munchbotTitleActionBar"
                android:textSize="40px" />

            <TextView
                android:id="@+id/munchbot"
                android:layout_width="246px"
                android:layout_height="80px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="@style/munchbotTitleActionBar" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="20px"
                app:cardCornerRadius="250px"
                app:cardElevation="50px">

                <RelativeLayout
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/action_bar_profile"
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/fui_transparent"
                        android:foregroundGravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/circular_border" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/action_bar_notifications"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:layout_toStartOf="@+id/cardView"
                android:src="@drawable/ic_notifications" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="450px"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/consultVet"
                    android:layout_width="450px"
                    android:layout_height="100px"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Manage Lilly’s personal details!"
                    android:textAppearance="@style/title_36px_darkBlue" />

                <TextView
                    android:id="@+id/add_a_vet_and_ensure_your_pet_s_health_stays_in_top_shape"
                    android:layout_width="450px"
                    android:layout_height="100px"
                    android:text="Change your pet’s personal details whenever you want."
                    android:textAppearance="@style/CreateANewTextStyle" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10px"
                app:cardCornerRadius="250px">

                <RelativeLayout
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/petProfil"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:foregroundGravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/cadre_pic"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/circular_border" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/petBirthdaySection"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/petBirthday"
                android:layout_width="300px"
                android:layout_height="130px"
                android:background="@drawable/cadre_age_profil"
                android:gravity="center"
                android:text="@string/pet_birthday"
                android:textAppearance="@style/text_32px_darkBlue" />

            <TextView
                android:id="@+id/petAge"
                android:layout_width="300px"
                android:layout_height="130px"
                android:layout_marginStart="30px"
                android:background="@drawable/cadre_age_profil"
                android:gravity="center"
                android:text="@string/pet_age"
                android:textAppearance="@style/text_32px_darkBlue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_margin="30px"
            android:background="@drawable/cadre_vet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px">

                <TextView
                    android:id="@+id/PetDetails"
                    android:layout_width="380px"
                    android:layout_height="50px"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/pet_details"
                    android:textAppearance="@style/title_36px_darkBlue" />

                <ImageButton
                    android:id="@+id/edit_pet_details"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_marginStart="190px"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_edit_done" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Name :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Name :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/petNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petType"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Type :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petTypeValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Type :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/petTypeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petBreed"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Breed :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petBreedValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Breed :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/petBreedEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petGender"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Gender :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petGenderValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Gender :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <AutoCompleteTextView
                    android:id="@+id/petGenderEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petWeight"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Weight :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petWeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Weight :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/petWeightEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/petHeight"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Height :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/petHeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Height :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/petHeightEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:layout_marginHorizontal="30px"
            android:layout_marginBottom="30px"
            android:background="@drawable/cadre_vet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/OwnerDetails"
                    android:layout_width="380px"
                    android:layout_height="50px"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/owner_details"
                    android:textAppearance="@style/title_36px_darkBlue" />

                <ImageButton
                    android:id="@+id/edit_owner_details"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_marginStart="190px"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_edit_done" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Name :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/ownerNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Name :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/ownerNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:visibility="gone"
                    android:background="@null"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ownerStatus"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Status :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/ownerStatusValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Status :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/ownerStatusEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:background="@null"
                    android:visibility="gone"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/line_vet"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ownerBio"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Bio :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <TextView
                    android:id="@+id/ownerBioValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:text="Bio :"
                    android:textAppearance="@style/text_32px_darkBlue" />

                <EditText
                    android:id="@+id/ownerBioEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:visibility="gone"
                    android:background="@null"
                    android:textAppearance="@style/text_32px_darkBlue" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>