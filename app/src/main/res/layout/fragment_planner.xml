<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="200px">

        <view
            android:id="@+id/topNavBar1"
            class="android.widget.LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentTop="true"
            tools:ignore="PxUsage" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_below="@id/topNavBar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        tools:ignore="PxUsage,UselessParent,ContentDescription">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="450px"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/This_is_Pet_s_Diary"
                    android:layout_width="470px"
                    android:layout_height="100px"
                    android:text="@string/This_is_Pet_s_Diary"
                    android:textAppearance="@style/title_48px_darkblue" />

                <TextView
                    android:id="@+id/Take_a_look_at_how_pet_s_day_was_planned"
                    android:layout_width="450px"
                    android:layout_height="100px"
                    android:text="@string/Take_a_look_at_how_pet_s_day_was_planned"
                    android:textAppearance="@style/CreateANewTextStyle" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10px"
                app:cardCornerRadius="250px">

                <RelativeLayout
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/petImagePlanner"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:foregroundGravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/cadre_pic"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/circular_border" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:paddingVertical="20px">

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginStart="-30px"
                android:layout_marginEnd="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/day_3_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/day_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/day_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day_center"/>

                <TextView
                    android:id="@+id/day_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_white"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/dayPlus1_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/dayPlus2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginHorizontal="10px" >
                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cadre_day"/>

                <TextView
                    android:id="@+id/dayPlus3_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:text="@string/day"
                    android:textAppearance="@style/text_24px_darkBlue"
                    android:fontFamily="@font/more_sugar"
                    android:gravity="center_horizontal|center_vertical"
                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30px"
            android:background="@drawable/cadre_vet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginHorizontal="20px"
                android:layout_marginTop="20px">

                <TextView
                    android:id="@+id/Today_s_Daily_Habits"
                    android:layout_width="380px"
                    android:layout_height="50px"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/Today_s_Daily_Habits"
                    android:textAppearance="@style/title_36px_darkBlue" />


                <ImageButton
                    android:id="@+id/Add_Daily_Habits"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_marginStart="190px"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20px">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/DailyHabitsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topNavBar"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150px"
        android:layout_marginTop="730px"
        android:layout_marginEnd="150px"
        android:layout_marginBottom="300px"
        android:background="@drawable/txt_planner"
        android:visibility="gone" />

    <view
        android:id="@+id/view"
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        tools:ignore="PxUsage" />

</RelativeLayout>