<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <view
        android:id="@+id/actionBarTop"
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        tools:ignore="PxUsage" />

    <LinearLayout
        android:id="@+id/healthFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/actionBarBottom"
        android:layout_below="@+id/actionBarTop"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="450px"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/consultVet"
                    android:layout_width="450px"
                    android:layout_height="80px"
                    android:text="@string/health_care"
                    android:textAppearance="@style/title_48px_darkblue" />

                <TextView
                    android:id="@+id/add_a_vet_and_ensure_your_pet_s_health_stays_in_top_shape"
                    android:layout_width="450px"
                    android:layout_height="120px"
                    android:text="@string/in_the_health_section_you_can_manage_your_pet_s_health_from_vet_reports_to_medications"
                    android:textAppearance="@style/CreateANewTextStyle" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10px"
                app:cardCornerRadius="250px">

                <RelativeLayout
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/petImageHealth"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:foregroundGravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/cadre_pic"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/circular_border" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MedicalRecords"
                android:layout_width="450px"
                android:layout_height="120px"
                android:gravity="bottom"
                android:layout_marginStart="30px"
                android:text="@string/medical_records"
                android:textAppearance="@style/title_44px_darkBlue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="PxUsage">

                <TextView
                    android:id="@+id/vaccinations"
                    android:layout_width="500px"
                    android:layout_height="150px"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130px"
                    android:layout_marginTop="50px"
                    android:layout_marginEnd="130px"
                    android:background="@drawable/ic_btn_getstarted"
                    android:gravity="center_vertical"
                    android:paddingStart="50px"
                    android:paddingEnd="0px"
                    android:text="@string/vaccinations"
                    android:textAppearance="@style/btn_40px_white" />

                <ImageView
                    android:id="@+id/ic_vaccinations"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignEnd="@+id/vaccinations"
                    android:layout_alignBottom="@+id/vaccinations"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="30px"
                    android:src="@drawable/ic_vaccinations" />

                <TextView
                    android:id="@+id/vetVisits"
                    android:layout_width="500px"
                    android:layout_height="150px"
                    android:layout_below="@+id/vaccinations"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130px"
                    android:layout_marginTop="30px"
                    android:layout_marginEnd="130px"
                    android:background="@drawable/ic_btn_getstarted"
                    android:gravity="center_vertical"
                    android:paddingStart="50px"
                    android:paddingEnd="0px"
                    android:text="@string/vet_visits"
                    android:textAppearance="@style/btn_40px_white" />

                <ImageView
                    android:id="@+id/ic_vet_visits"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignEnd="@+id/vetVisits"
                    android:layout_alignBottom="@+id/vetVisits"
                    android:layout_marginEnd="30px"
                    android:layout_marginBottom="30px"
                    android:src="@drawable/ic_vet_visits" />

                <TextView
                    android:id="@+id/reports"
                    android:layout_width="500px"
                    android:layout_height="150px"
                    android:layout_below="@+id/vetVisits"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130px"
                    android:layout_marginTop="30px"
                    android:layout_marginEnd="130px"
                    android:background="@drawable/ic_btn_getstarted"
                    android:gravity="center_vertical"
                    android:paddingStart="50px"
                    android:paddingEnd="0px"
                    android:text="@string/reports"
                    android:textAppearance="@style/btn_40px_white" />

                <ImageView
                    android:id="@+id/ic_reports"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignEnd="@+id/reports"
                    android:layout_alignBottom="@+id/reports"
                    android:layout_marginEnd="30px"
                    android:layout_marginBottom="30px"
                    android:src="@drawable/ic_reports" />

                <TextView
                    android:id="@+id/medications"
                    android:layout_width="500px"
                    android:layout_height="150px"
                    android:layout_below="@+id/reports"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130px"
                    android:layout_marginTop="30px"
                    android:layout_marginEnd="130px"
                    android:background="@drawable/ic_btn_getstarted"
                    android:gravity="center_vertical"
                    android:paddingStart="50px"
                    android:paddingEnd="0px"
                    android:text="@string/medications"
                    android:textAppearance="@style/btn_40px_white" />

                <ImageView
                    android:id="@+id/ic_medications"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignEnd="@+id/medications"
                    android:layout_alignBottom="@+id/medications"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="30px"
                    android:src="@drawable/ic_medications" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <view
        android:id="@+id/actionBarBottom"
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        tools:ignore="PxUsage" />

    <FrameLayout
        android:id="@+id/fragment_container_health"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20px"/>

</RelativeLayout>