<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="PxUsage">

    <com.google.android.material.textfield.TextInputLayout
        app:hintAnimationEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:textAppearance="@style/input_32px_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:hintAnimationEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage on mg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medicine_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:textAppearance="@style/input_32px_gray" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        app:hintAnimationEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount per day">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medicine_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:textAppearance="@style/input_32px_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:hintAnimationEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (weeks)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medicine_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:textAppearance="@style/input_32px_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_medicine_button"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btn_getstarted"
            android:text="Add Medicine"
            android:textAppearance="@style/btn_40px_white"/>

        <CheckBox
            android:id="@+id/notifyCheckBoxDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30px"
            android:buttonTint="@color/firstColor"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Notify me"
            android:textAppearance="@style/input_32px_gray"
            android:textColor="#7F7F7F"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</LinearLayout>
