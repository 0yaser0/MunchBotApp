<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    android:background="@drawable/x_border"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        tools:context=".ui.auth.Login"
        tools:ignore="PxUsage,UselessParent">


        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@drawable/vectors_bar"
            android:contentDescription="@string/waves" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="325px"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sign_up"
                    style="@style/SignUpTextStyle"
                    android:text="@string/sign_up" />

                <TextView
                    android:id="@+id/create_a_ne"
                    style="@style/CreateANewTextStyle"
                    android:text="@string/create_a_ne" />

            </LinearLayout>

            <ImageView
                android:id="@+id/signUpStep1"
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:background="@drawable/ic_signupstep1"
                android:contentDescription="@string/waves" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:hint="@string/email"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginHorizontal="30px"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="30px"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/input_32px_gray"
                tools:ignore="PxUsage,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:hint="@string/password"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginHorizontal="30px"
                android:drawableStart="@drawable/ic_icon_password"
                android:drawablePadding="30px"
                android:inputType="textPassword"
                android:textAppearance="@style/input_32px_gray"
                tools:ignore="PxUsage,TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/passwordToggle"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginStart="630px"
            android:layout_marginTop="-80px"
            android:src="@drawable/ic_dog_eyes_close" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:hint="@string/password"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginHorizontal="30px"
                android:drawableStart="@drawable/ic_icon_password"
                android:drawablePadding="30px"
                android:inputType="textPassword"
                android:textAppearance="@style/input_32px_gray"
                tools:ignore="PxUsage,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ConfirmPasswordToggle"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginStart="630px"
            android:layout_marginTop="-80px"
            android:src="@drawable/ic_dog_eyes_close" />

        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="25px"
            android:layout_marginTop="20px"
            android:buttonTint="@color/checkBox"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/i_agree_to_"
            android:textAppearance="@style/input_32px_gray"
            android:textColor="#7F7F7F" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="473.3px"
            android:layout_height="88px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:background="@drawable/ic_btn_getstarted"
            android:gravity="center"
            android:text="@string/txtContinue"
            android:textAppearance="@style/btn_36px_white"
            tools:ignore="PxUsage,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/already_hav"
            android:layout_width="374px"
            android:layout_height="35px"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="@string/already_hav"
            android:textAppearance="@style/already_hav" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/progressTextStart"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="15px"
                android:gravity="center"
                android:text="0%"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="10sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="15px"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toStartOf="@id/progressTextEnd"
                android:layout_toEndOf="@id/progressTextStart"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar" />

            <ImageView
                android:id="@+id/progressIndicator"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/pet_paw"
                android:translationX="5dp" />

            <TextView
                android:id="@+id/progressTextEnd"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="15px"
                android:text="100%"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="10sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/updateProgressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Update Progress" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loader_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CB000000"
        android:gravity="center"
        android:paddingTop="70px"
        android:visibility="gone">

        <include layout="@layout/loader" />

    </RelativeLayout>
</RelativeLayout>