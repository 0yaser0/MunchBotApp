<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <view
        android:id="@+id/topNavBar"
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        tools:ignore="PxUsage" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_below="@+id/topNavBar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        tools:ignore="PxUsage,UselessParent,ContentDescription">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="PxUsage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FoodTime"
                    style="@style/SignUpTextStyle"
                    android:layout_width="match_parent"
                    android:text="@string/FoodTime" />

                <TextView
                    android:id="@+id/FoodTimepara"
                    style="@style/CreateANewTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="20px"
                    android:layout_marginEnd="30px"
                    android:text="@string/FoodTimepara" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:hint="@string/DeviceName"
                    android:layout_marginTop="30px"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/DeviceName"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="30px"
                        android:drawableStart="@drawable/ic_device_munchbot"
                        android:drawablePadding="30px"
                        android:inputType="text"
                        android:textAppearance="@style/input_15sp_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <view
        android:id="@+id/view"
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_alignParentBottom="true"
        tools:ignore="PxUsage" />


    <ImageView
        android:id="@+id/add_round_broken_line"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30px"
        android:layout_marginBottom="200px"
        android:foregroundGravity="center"
        android:src="@drawable/ic_add_round_broken_line"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_save_meel"
        android:layout_width="280px"
        android:layout_height="90px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30px"
        android:layout_marginBottom="200px"
        android:foregroundGravity="center"
        android:text="@string/save_meel"
        android:textAppearance="@style/btn_30sp_white"
        android:background="@drawable/ic_btn_getstarted"
        android:src="@drawable/ic_add_round_broken_line"
        android:visibility="visible" />

</RelativeLayout>