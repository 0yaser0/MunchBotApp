<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        tools:ignore="PxUsage,UselessParent,ContentDescription">

        <view
            class="android.widget.LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="200px"
            tools:ignore="PxUsage" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="115px"
            app:cardCornerRadius="250px"
            app:cardElevation="50px">

            <RelativeLayout
                android:layout_width="450px"
                android:layout_height="450px"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/PetImageHome"
                    android:layout_width="450px"
                    android:layout_height="450px"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foregroundGravity="center" />

                <ImageView
                    android:layout_width="450px"
                    android:layout_height="450px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circular_border" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="756px"
            android:layout_height="100px"
            android:layout_marginTop="70px"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pet_name"
            android:textAppearance="@style/title_48px_blue" />

        <TextView
            android:id="@+id/hello_user_"
            android:layout_width="637px"
            android:layout_height="270px"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="12px"
            android:text="@string/helloUser"
            android:textAppearance="@style/para_32px_gray"
            android:translationY="-6.25px" />

        <Button
            android:id="@+id/bluetooth"
            android:layout_width="473.3px"
            android:layout_height="88px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:background="@drawable/ic_btn_getstarted"
            android:text="@string/bluetooth"
            android:textAppearance="@style/btn_36px_white"
            tools:ignore="PxUsage,TouchTargetSizeCheck" />

    </LinearLayout>

    <view
        class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:layout_alignParentBottom="true"
        tools:ignore="PxUsage" />

</RelativeLayout>