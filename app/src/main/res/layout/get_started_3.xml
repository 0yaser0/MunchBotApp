<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GetStarted3"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        tools:ignore="PxUsage">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="756px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:background="@drawable/vectors_bar"
            tools:ignore="PxUsage" />

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:layout_marginStart="9dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_gst2"
        android:layout_width="700px"
        android:layout_height="650px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/vaccin"
        tools:ignore="PxUsage" />


    <TextView
        android:id="@+id/welcome_to_"
        android:layout_width="750px"
        android:layout_height="70px"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal|center_vertical|center"
        android:text="@string/pet_care_made_easy"
        android:textAppearance="@style/welcome_to_"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/meet_munchb"
        android:layout_width="647px"
        android:layout_height="200px"
        android:layout_marginStart="50px"
        android:layout_marginTop="20px"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal|center_vertical|center"
        android:lineSpacingExtra="12px"
        android:text="@string/explore_a_comprehensive_array_of_convenient_services_and_a_caring_community_committed_to_ensuring_the_happiness_and_well_being_of_your_beloved_pet"
        android:textAppearance="@style/meet_munchb"
        android:textColor="#CC6C6868"
        android:textSize="32px"
        android:translationY="-6.25px"
        tools:ignore="PxUsage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="top"
        android:layout_marginTop="-20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_b1"
            android:layout_width="27px"
            android:layout_height="27px"
            android:layout_marginStart="328px"
            android:layout_marginTop="80px"
            android:src="@drawable/ic_circle_blur"
            tools:ignore="PxUsage" />

        <ImageView
            android:id="@+id/circle_b2"
            android:layout_width="27px"
            android:layout_height="27px"
            android:layout_marginTop="80px"
            android:src="@drawable/ic_circle_blur"
            tools:ignore="PxUsage" />

        <ImageView
            android:id="@+id/circle_clean"
            android:layout_width="27px"
            android:layout_height="27px"
            android:layout_marginTop="80px"
            android:src="@drawable/ic_circle_clean"
            tools:ignore="PxUsage" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_getstarted"
        android:layout_width="473.3px"
        android:layout_height="88px"
        android:layout_marginTop="30px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_btn_getstarted"
        android:text="@string/get_started"
        android:textAppearance="@style/get_started"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/doesn_t_hav"
        android:layout_width="375px"
        android:layout_height="35px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/doesn_t_hav"
        android:textAppearance="@style/doesn_t_hav"
        tools:ignore="PxUsage" />
</LinearLayout>