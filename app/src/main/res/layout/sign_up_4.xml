<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="756px"
    android:layout_height="1612px"
    android:layout_gravity="center"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:orientation="vertical"
        tools:context=".ui.main_view.auth.Login"
        tools:ignore="PxUsage,UselessParent,ContentDescription">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="271px"
            tools:ignore="PxUsage">

            <view
                android:layout_width="match_parent"
                android:layout_height="271px"
                tools:ignore="PxUsage"
                class="android.widget.LinearLayout"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/survey_questions"
                    style="@style/SignUpTextStyle"
                    android:layout_width="match_parent"
                    android:text="@string/survey_questions" />

                <TextView
                    android:id="@+id/create_a_ne"
                    style="@style/CreateANewTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="20px"
                    android:layout_marginEnd="30px"
                    android:text="@string/we_will_ask_you_some_questions_for_finding_you_pets_of_your_choice" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="230px"
            android:layout_height="230px"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/cadre_pic"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_cadre_pic"
                android:scaleType="centerCrop"
                android:layout_margin="10px"
                android:background="@drawable/circular_border" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camera"
                android:background="@drawable/circular_border"
                android:padding="30px" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:hint="Name"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/autograph"
                        android:drawablePadding="30px"
                        android:inputType="textEmailAddress"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/genderTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginVertical="15px"
                    android:gravity="center"
                    android:hint="Gender"
                    app:hintAnimationEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/genderEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/gender"
                        android:drawablePadding="30px"
                        android:inputType="text"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:hint="Weight kg"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/weightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/weight"
                        android:drawablePadding="30px"
                        android:inputType="number"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:hint="Breed"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/breedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/breed"
                        android:drawablePadding="30px"
                        android:inputType="textEmailAddress"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginVertical="15px"
                    android:gravity="center"
                    android:hint="Date of Birthday"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/calendarEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/calendar"
                        android:drawablePadding="30px"
                        android:inputType="date"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:hint="Height cm"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/heightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginHorizontal="25px"
                        android:drawableEnd="@drawable/type"
                        android:drawablePadding="30px"
                        android:inputType="number"
                        android:textAppearance="@style/input_32px_gray"
                        tools:ignore="PxUsage,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loader_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CB000000"
        android:gravity="center"
        android:paddingTop="70px"
        android:visibility="gone">

        <include layout="@layout/loader" />

    </RelativeLayout>
</RelativeLayout>